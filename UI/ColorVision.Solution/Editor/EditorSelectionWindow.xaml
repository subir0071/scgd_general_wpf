<Window x:Class="ColorVision.Solution.Editor.EditorSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorVision.Solution.Editor"
        mc:Ignorable="d"
        Title="选择编辑器类型" Height="150" Width="300">
    <StackPanel Margin="20">
        <ComboBox x:Name="EditorComboBox" Margin="0,0,0,10" />
        <Button Content="确定" Width="80" HorizontalAlignment="Right" Click="OkButton_Click"/>
    </StackPanel>
</Window>
