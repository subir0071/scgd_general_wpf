<Window x:Class="ColorVision.Engine.Rbac.UserInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorVision.Engine.Rbac"
        xmlns:properties ="clr-namespace:ColorVision.Engine.Properties"
        xmlns:hc ="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance local:UserManager}"
        Title="用户" Height="350" Width="400" Background="{DynamicResource GlobalBackground}" Initialized="Window_Initialized">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
            <Button Content="登录" Command="{Binding LoginCommand}" Margin="0,0,10,0"/>
            <Button Content="编辑" Command="{Binding EditCommand}" Width="75"/>
        </StackPanel>
        <!-- User Information and Avatar -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Avatar with Default Image -->
            <Border Width="150" Height="150" Margin="0,0,20,0">
                <hc:Gravatar Grid.Column="1" Id="{Binding UserModel.UserName}" Height="180" Width="180" Margin="10"/>
            </Border>

            <!-- User Details -->
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="{Binding UserModel.UserName}" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding UserDetailModel.Company}" Margin="0,0,0,5"/>
                <TextBlock Text="{Binding UserDetailModel.Gender}" Margin="0,0,0,5"/>
                <TextBlock Text="{Binding UserDetailModel.PermissionMode}" Margin="0,0,0,5"/>
                <TextBlock Text="{Binding UserDetailModel.Remark}" Margin="0,0,0,5"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
