<Window x:Class="CvOperator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CvOperator"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/> 
        </Grid.RowDefinitions>
        <Grid  Grid.Row="0">
            <Label Grid.Row="0"  Content="操作员检测界面" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40"/>
            <Button Grid.Row="0" HorizontalAlignment="Right" Content="X" FontSize="50" Background="#EFF4F9" BorderThickness="0" Width="100" Margin="10" Click="Button_Click" VerticalAlignment="Top"/>
        </Grid>
        <Grid Grid.Row="1">
            <Button Height="100" Width="400" Content="开始检测" FontSize="30"  />
        </Grid>
    </Grid>
</Window>
