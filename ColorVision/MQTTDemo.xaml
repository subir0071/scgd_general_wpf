<Window x:Class="ColorVision.MQTTDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorVision"
        mc:Ignorable="d"
        Title="MQTTDemo" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="TextBoxIP" TextWrapping="Wrap" Text="192.168.3.225" Width="120"/>
                <TextBox x:Name="TextBoxPort" TextWrapping="Wrap" Text="1883" Width="120"/>
                <Button  Content="启动" Click="Start_Click"/>
                <Button  Content="关闭" Click="Close_Click"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="TextBoxSubscribe" TextWrapping="Wrap" Text="topic1" Width="120"/>
                <Button  Content="订阅" Click="Subscribe_Click"/>
                <Button  Content="退订" Click="UnSubscribe_Click"/>
            </StackPanel>
           <StackPanel Orientation="Horizontal">
                <TextBox x:Name="TextBoxSubscribe1" TextWrapping="Wrap" Text="topic1" Width="120"/>
                <TextBox x:Name="TextBoxSend" TextWrapping="Wrap"   Text="topic1" Width="120"/>
                <CheckBox x:Name="CheckBoxRetained" />
                <Button  Content="发送" Click="Send_Click"/>
                <Button  Content="发送Demo" Click="SendDemo_Click"/>

            </StackPanel>

        </StackPanel>
        <TextBox  Grid.Row="1" x:Name="TextBoxResult"  VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" />


    </Grid>
</Window>
