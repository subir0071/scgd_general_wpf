<UserControl x:Class="ColorVision.Template.PG"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ColorVision.Template"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=local:PGParam}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="0,3">
            <DockPanel Margin="0,5">
                <RadioButton Content="TCPIP通讯" Checked="RadioButton_Checked"/>
                <RadioButton Content="Granda通讯" Checked="RadioButton_Checked1"/>
            </DockPanel>
            <DockPanel Margin="0,5">
                <TextBlock Text="PG画面指令"/>
                <TextBox Text="{Binding PGPattenChangeComm1}" Height="16" BorderThickness="0,0,0,1" PreviewKeyDown="TextBox_PreviewKeyDown"/>
            </DockPanel>
            <CheckBox Content="启用模板"  IsChecked="{Binding IsEnable}" />
        </StackPanel>
            
    </Grid>
</UserControl>
