<Window x:Class="ColorVision.Template.WindowResource"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorVision.Template"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        mc:Ignorable="d"
        ShowInTaskbar="False"
        Title="WindowResource" Height="500" Width="600"  MinWidth="600" WindowStartupLocation="CenterOwner" Initialized="Window_Initialized">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <GroupBox x:Name="TemplateGrid"  Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Header="资源"  BorderThickness="2" Margin="10,5">
            <DockPanel Grid.Row="0"  >
                <Grid DockPanel.Dock="Top" Margin="0,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20*"/>
                        <ColumnDefinition Width="50*"/>
                    </Grid.ColumnDefinitions>
                    <Grid x:Name="GridListHeader1" Grid.Column="0">
                        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Center" Text="序号" Margin="10,0,0,0"/>
                    </Grid>
                    <GridSplitter Grid.Column="0" Width="2"  Background="AliceBlue"/>
                    <Grid x:Name="GridListHeader2" Grid.Column="1">
                        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Center" Text="{Binding ElementName=TemplateGrid,Path=Header,StringFormat='{}{0}名称'}" Margin="10,0,0,0" />
                    </Grid>
                    <Grid x:Name="GridListLen" Grid.Column="0" Grid.ColumnSpan="2" Margin="20,0" />
                </Grid>

                <ListView  x:Name="ListView1" Loaded="ListView1_Loaded" DataContext="{Binding ListConfigs}"   ScrollViewer.HorizontalScrollBarVisibility="Disabled"  ManipulationBoundaryFeedback="SCManipulationBoundaryFeedback" PreviewMouseDoubleClick="ListView1_PreviewMouseDoubleClick" SelectionChanged="ListView1_SelectionChanged">
                    <ListView.Resources>
                        <ResourceDictionary>
                            <ResourceDictionary.MergedDictionaries>
                                <ResourceDictionary Source="/Theme/Listview.xaml"/>
                            </ResourceDictionary.MergedDictionaries>
                        </ResourceDictionary>
                    </ListView.Resources>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Width="{Binding ElementName=GridListLen,Path=ActualWidth}" >
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate x:Name="ListConfigDataTemplate"  DataType="{x:Type local:ListConfig}">
                                        <DockPanel Width="{Binding ElementName=GridListLen,Path=ActualWidth}" Margin="0,0,-30,0">
                                            <TextBlock DockPanel.Dock="Right"  Text="{ Binding Tag}"  FontSize="10" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                            <Grid Width="{Binding ElementName=GridListHeader1,Path=ActualWidth}">
                                                <TextBlock Text="{ Binding ID}" HorizontalAlignment="Left"/>
                                            </Grid>
                                            <Grid >
                                                <TextBlock Text="{ Binding Name}" HorizontalAlignment="Left"/>
                                            </Grid>
                                        </DockPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>

                </ListView>


            </DockPanel>



        </GroupBox>

        <Grid Grid.Row="0" Grid.Column="1"  x:Name="GridProperty" Margin="0,15,0,5">
            <!--<Grid.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.MergedDictionaries>
                        <ResourceDictionary Source="/HandyControl;component/themes/basic/colors/light.xaml"/>
                        <ResourceDictionary Source="/HandyControl;component/Themes/Theme.xaml"/>
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>
            </Grid.Resources>
            <hc:PropertyGrid x:Name="PropertyGrid1"/>

            <xctk:PropertyGrid   x:Name="PropertyGrid1" /> -->


        </Grid>

        <StackPanel x:Name="CreateGrid"  Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center">
            <DockPanel  >
                <Label Content="类型"/>
                <ComboBox x:Name="TextBox_Type" SelectedValuePath="Name"  DisplayMemberPath="Name" Margin="3,3,0,3"/>
            </DockPanel>
            <DockPanel  >
                <Label Content="标识"/>
                <TextBox x:Name="TextBox_Code" Margin="3,3,0,3"/>
            </DockPanel>
            <DockPanel  >
                <Label Content="名称"/>
                <TextBox x:Name="TextBox_Name" Margin="3,3,0,3"/>
            </DockPanel>
            <UniformGrid x:Name="FunctionGrid" Columns="3" Margin="0,8"  Width="345"  HorizontalAlignment="Center">
                <Button Width="80"  Click="Button_New_Click" HorizontalAlignment="Left">
                    <TextBlock Text="{Binding ElementName=TemplateGrid,Path=Header,StringFormat='新建{0}'}"/>
                </Button>
                <Button  Width="80"   Click="Button_Del_Click" >
                    <TextBlock Text="{Binding ElementName=TemplateGrid,Path=Header,StringFormat='删除{0}'}"/>
                </Button>
                <Button  Width="80" HorizontalAlignment="Right"  Click="Button_Save_Click" >
                    <TextBlock Text="{Binding ElementName=TemplateGrid,Path=Header,StringFormat='保存{0}'}"/>
                </Button>

            </UniformGrid>
        </StackPanel>
    </Grid>
</Window>
