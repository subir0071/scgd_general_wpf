                            <Button DockPanel.Dock="Right" Content="..."  Command="{Binding NormalB.DSNU.SelectFileCommand}" Width="40"  Margin="5,0"/>
                            <TextBox BorderThickness="0,0,0,1"  PreviewKeyDown="TextBox_PreviewKeyDown"   Text="{Binding NormalB.DSNU.FilePath}" />
