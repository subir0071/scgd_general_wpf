                    <Button DockPanel.Dock="Right" Content="..."  Command="{Binding NormalB.Uniformity.SelectFileCommand}" Width="40"  Margin="5,0"/>
                    <TextBox BorderThickness="0,0,0,1" PreviewKeyDown="TextBox_PreviewKeyDown"   Text="{Binding NormalB.Uniformity.FilePath}" />
                </DockPanel>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="色度校正" >
            <StackPanel>
                <DockPanel  Margin="0,2">
                    <TextBlock DockPanel.Dock="Left" Text="亮度" Width="80"  />
                    <CheckBox VerticalAlignment="Center"  DockPanel.Dock="Right" Content="" IsChecked="{Binding Color.Luminance.IsSelected}"   Margin="5,0"/>
                    <Button DockPanel.Dock="Right" Content="..."  Command="{Binding Color.Luminance.SelectFileCommand}" Width="40"  Margin="5,0"/>
                    <TextBox BorderThickness="0,0,0,1"  PreviewKeyDown="TextBox_PreviewKeyDown"   Text="{Binding Color.Luminance.FilePath}" />
                </DockPanel>
                <DockPanel  Margin="0,2">
                    <TextBlock DockPanel.Dock="Left" Text="单色" Width="80"  />
                    <CheckBox VerticalAlignment="Center"  DockPanel.Dock="Right" Content="" IsChecked="{Binding Color.LumOneColor.IsSelected}"   Margin="5,0"/>
                    <Button DockPanel.Dock="Right" Content="..."  Command="{Binding Color.LumOneColor.SelectFileCommand}" Width="40"  Margin="5,0"/>
                    <TextBox BorderThickness="0,0,0,1" PreviewKeyDown="TextBox_PreviewKeyDown"   Text="{Binding Color.LumOneColor.FilePath}" />
                </DockPanel>
                <DockPanel  Margin="0,2">
                    <TextBlock DockPanel.Dock="Left" Text="四色" Width="80"  />
