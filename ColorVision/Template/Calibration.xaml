                </DockPanel>
                <DockPanel  Margin="0,2">
                    <TextBlock DockPanel.Dock="Left" Text="多色" Width="80"  />
                    <CheckBox VerticalAlignment="Center"  DockPanel.Dock="Right" Content="" IsChecked="{Binding Color.LumMultiColor.IsSelected}"   Margin="5,0"/>
                    <Button DockPanel.Dock="Right" Content="..."  Command="{Binding Color.LumMultiColor.SelectFileCommand}" Width="40"  Margin="5,0"/>
                    <TextBox BorderThickness="0,0,0,1"  PreviewKeyDown="TextBox_PreviewKeyDown"   Text="{Binding Color.LumMultiColor.FilePath}" />
                </DockPanel>
            </StackPanel>
        </GroupBox>
    </StackPanel>

</UserControl>
