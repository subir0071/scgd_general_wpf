                            <TextBox BorderThickness="0,0,0,1" PreviewKeyDown="TextBox_PreviewKeyDown"  Text="{Binding NormalB.DefectPoint.FilePath}" />
                        </DockPanel>

                        <DockPanel  Margin="0,2">
                            <TextBlock DockPanel.Dock="Left" Text="ColorShift" Width="80"  />
                            <CheckBox VerticalAlignment="Center"  DockPanel.Dock="Right" Content="" IsChecked="{Binding NormalB.ColorShift.IsSelected}"   Margin="5,0"/>
                            <Button DockPanel.Dock="Right" Content="..."  Command="{Binding NormalB.ColorShift.SelectFileCommand}" Width="40"  Margin="5,0"/>
                            <TextBox BorderThickness="0,0,0,1" PreviewKeyDown="TextBox_PreviewKeyDown"  Text="{Binding NormalB.ColorShift.FilePath}" />
                        </DockPanel>
                        <DockPanel  Margin="0,2">
                            <TextBlock DockPanel.Dock="Left" Text="畸变" Width="80"  />
                            <CheckBox VerticalAlignment="Center"  DockPanel.Dock="Right" Content="" IsChecked="{Binding NormalB.Distortion.IsSelected}"   Margin="5,0"/>
                            <Button DockPanel.Dock="Right" Content="..."  Command="{Binding NormalB.Distortion.SelectFileCommand}" Width="40"  Margin="5,0"/>
                            <TextBox BorderThickness="0,0,0,1"  PreviewKeyDown="TextBox_PreviewKeyDown"   Text="{Binding NormalB.Distortion.FilePath}" />
                        </DockPanel>
                    </StackPanel>
                </Border>
            </TabItem>
        </TabControl>
        
        
        
        <GroupBox Header="均匀场校正" >
            <StackPanel>
                <DockPanel Margin="0,2">
                    <TextBlock DockPanel.Dock="Left" Text="R(红)" Width="80"  />
                    <CheckBox VerticalAlignment="Center"  DockPanel.Dock="Right" Content="" IsChecked="{Binding NormalR.Uniformity.IsSelected}"   Margin="5,0"/>
                    <Button DockPanel.Dock="Right" Content="..."  Command="{Binding NormalR.Uniformity.SelectFileCommand}" Width="40"  Margin="5,0"/>
                    <TextBox BorderThickness="0,0,0,1"  PreviewKeyDown="TextBox_PreviewKeyDown"   Text="{Binding NormalR.Uniformity.FilePath}" />
                </DockPanel>
                <DockPanel Margin="0,2">
                    <TextBlock DockPanel.Dock="Left" Text="G(绿)" Width="80" />
                    <CheckBox  VerticalAlignment="Center" DockPanel.Dock="Right" Content="" IsChecked="{Binding NormalG.Uniformity.IsSelected}"   Margin="5,0"/>
                    <Button DockPanel.Dock="Right" Content="..."  Command="{Binding NormalG.Uniformity.SelectFileCommand}" Width="40"  Margin="5,0"/>
                    <TextBox BorderThickness="0,0,0,1"  PreviewKeyDown="TextBox_PreviewKeyDown"  Text="{Binding NormalG.Uniformity.FilePath}" />
                </DockPanel>
                <DockPanel  Margin="0,2">
                    <TextBlock DockPanel.Dock="Left" Text="B(蓝)" Width="80"  />
