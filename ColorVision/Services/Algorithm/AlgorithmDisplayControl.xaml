<UserControl x:Class="ColorVision.Device.POI.AlgorithmDisplayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ColorVision.Device.POI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300" Initialized="UserControl_Initialized">
    <UserControl.Resources>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="{DynamicResource GlobalTextBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            <Setter Property="ToolTip" Value="{ Binding Text,RelativeSource={RelativeSource Self}}"/>
        </Style>
    </UserControl.Resources>
    <StackPanel Margin="0,5">
        <DockPanel>
            <ToggleButton  x:Name="ToggleButton0"  Style="{StaticResource ButtonPageControl1}"  Content="关注点服务"  FontSize="15"  IsChecked="True" />
        </DockPanel>
        

        <Border  Style="{DynamicResource BorderModuleArea}" Visibility="{Binding ElementName=ToggleButton0,Path=IsChecked,Converter={StaticResource bool2VisibilityConverter}}" >
            <StackPanel Margin="5" >
                <Button Content="获取服务注册信息"  HorizontalAlignment="Left" Click="Algorithm_GET" />
                <Button Content="服务初始化"  HorizontalAlignment="Left" Click="Algorithm_INI" />


                <GroupBox  Header="图片文件">
                    <DockPanel Margin="0,2">
                        <Button  Content="..." DockPanel.Dock="Right"  HorizontalAlignment="Right" Click="Open_File" />
                        <TextBox x:Name="ImageFile" Style="{StaticResource TextBox.Small}" BorderThickness="0,0,0,1" HorizontalAlignment="Left" Width="150" />
                    </DockPanel>
                </GroupBox>

                <GroupBox  Header="图像数据区">
                    <DockPanel Margin="0,2">
                        <Button Content="刷新" Click="Button_Click_Refresh" />
                        <Button DockPanel.Dock="Right" Content="上传" Click="Button_Click_Upload" />
                        <Button DockPanel.Dock="Right" Content="打开" Click="Button_Click_Open" />
                        <ComboBox x:Name="CB_ImageFiles"  Style="{StaticResource ComboBox.Small}"  />
                    </DockPanel>
                </GroupBox>

                <GroupBox  Header="关注点相关的图像数据">
                    <DockPanel Margin="0,2">
                        <Button  Content="关注点" DockPanel.Dock="Right"  HorizontalAlignment="Right" Click="PoiClick" />
                        <ComboBox  x:Name="ComboxPoiTemplate"  Width="150" HorizontalAlignment="Left" Style="{StaticResource ComboBox.Small}" SelectedValuePath="Value"  DisplayMemberPath="Key" />
                    </DockPanel>
                </GroupBox>

                <GroupBox  Header="FOV">
                    <DockPanel Margin="0,2">
                        <Button  Content="FOV" DockPanel.Dock="Right"  HorizontalAlignment="Right" Click="FOV_Click" />
                        <ComboBox  x:Name="ComboxFOVTemplate"  Width="150" HorizontalAlignment="Left" Style="{StaticResource ComboBox.Small}" SelectedValuePath="Value"  DisplayMemberPath="Key" />
                    </DockPanel>
                </GroupBox>

                <GroupBox  Header="MTF">
                    <DockPanel Margin="0,2">
                        <Button  Content="MTF" DockPanel.Dock="Right"  HorizontalAlignment="Right" Click="MTF_Click" />
                        <ComboBox  x:Name="ComboxMTFTemplate"  Width="150" HorizontalAlignment="Left" Style="{StaticResource ComboBox.Small}" SelectedValuePath="Value"  DisplayMemberPath="Key" />
                    </DockPanel>
                </GroupBox>

                <GroupBox  Header="SFR">
                    <DockPanel Margin="0,2">
                        <Button  Content="SFR" DockPanel.Dock="Right"  HorizontalAlignment="Right" Click="SFR_Clik" />
                        <ComboBox  x:Name="ComboxSFRTemplate"  Width="150" HorizontalAlignment="Left" Style="{StaticResource ComboBox.Small}" SelectedValuePath="Value"  DisplayMemberPath="Key" />
                    </DockPanel>
                </GroupBox>

                <GroupBox  Header="Ghost">
                    <DockPanel Margin="0,2">
                        <Button  Content="Ghost" DockPanel.Dock="Right"  HorizontalAlignment="Right" Click="Ghost_Click" />
                        <ComboBox  x:Name="ComboxGhostTemplate"  Width="150" HorizontalAlignment="Left" Style="{StaticResource ComboBox.Small}" SelectedValuePath="Value"  DisplayMemberPath="Key" />
                    </DockPanel>
                </GroupBox>

                <GroupBox  Header="Distortion">
                    <DockPanel Margin="0,2">
                        <Button  Content="Distortion" DockPanel.Dock="Right"  HorizontalAlignment="Right" Click="Distortion_Click" />
                        <ComboBox  x:Name="ComboxDistortionTemplate"  Width="150" HorizontalAlignment="Left" Style="{StaticResource ComboBox.Small}" SelectedValuePath="Value"  DisplayMemberPath="Key" />
                    </DockPanel>
                </GroupBox>


                <DockPanel Margin="5" >
                    <TextBlock Text="输出视图："  VerticalAlignment="Center" Width="60"/>
                    <ComboBox x:Name="ComboxView"  Style="{StaticResource ComboBox.Small}"  SelectedValuePath="Value" DisplayMemberPath="Key"   />
                </DockPanel>
            </StackPanel>
        </Border>
    </StackPanel>

</UserControl>
