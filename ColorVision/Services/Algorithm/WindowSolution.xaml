<Window x:Class="ColorVision.Services.Algorithm.WindowSolution"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorVision.Services.Algorithm"
        xmlns:draw ="clr-namespace:ColorVision.Draw;assembly=ColorVision.Util"
        xmlns:colorvison ="clr-namespace:ColorVision"
        mc:Ignorable="d"
        Title="数据查看窗口" Height="720" Width="1280" Initialized="Window_Initialized">
    <Grid>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal">
                <Button Content="MTF" Click="Button_Click"  Tag="MTF"/>
                <Button Content="SFR" Click="Button_Click"  Tag="SFR"/>
                <Button Content="Fov" Click="Button_Click"  Tag="Fov"/>
                <Button Content="鬼影" Click="Button_Click"  Tag="Ghost"/>
                <Button Content="畸变" Click="Button_Click"  Tag="Distortion"/>
            </StackPanel>
            <StackPanel x:Name="StackPanelSort"  Orientation="Horizontal" Grid.Row="1">
                <Button Content="按照序号正序" Click="Button_Click_1" />
                <Button Content="按照序号倒序" Click="Button_Click_2" />
                <Button Content="按照批次号倒序" Click="Button_Click_3" />
                <Button Content="按照批次号正序" Click="Button_Click_4" />
            </StackPanel>

            <ListView  x:Name="ListView1"  ScrollViewer.HorizontalScrollBarVisibility="Auto"  ScrollViewer.VerticalScrollBarVisibility="Auto" Grid.Row="2"/>
        </Grid>

    </Grid>
</Window>
