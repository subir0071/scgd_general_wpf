<Window x:Class="ColorVision.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorVision"
        xmlns:effects="http://gu.se/Geometry"
        xmlns:winf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="MainWindow" Height="720" Width="1280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Menu x:Name="Menu1">
                <MenuItem Header="文件(_F)">
                </MenuItem>
                <MenuItem Header="MQTTDemo(_M)" Click="MenuItem_Click">
                </MenuItem>
            </Menu>
        </Grid>
        <Grid  Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" >
                <StackPanel Orientation="Horizontal">
                    <Button Content="打开测试图像"  Click="Button_Click"/>
                    <Button Content="绘制图形"  Click="Button1_Click"/>
                    <Button Content="移动图形"  Click="Button2_Click"/>
                </StackPanel>

                <StackPanel x:Name="ImageInfoText">
                    <TextBlock >
                    <Run Text="R:"/>
                    <Run Text="{Binding R}"/>
                    <Run Text="G:"/>
                    <Run Text="{Binding G}"/>
                    <Run Text="B:"/>
                    <Run Text="{Binding B}"/>
                    </TextBlock>
                    <TextBlock>
                      <Run Text="X:"/>
                    <Run Text="{Binding X}"/>
                     <Run Text="Y:"/>
                    <Run Text="{Binding Y}"/>
                     <Run Text="X1:"/>
                    <Run Text="{Binding X1}"/>
                     <Run Text="Y1:"/>
                    <Run Text="{Binding Y1}"/>
                    </TextBlock>
                    <TextBlock>
                        <Run Text="Hex:"/>
                        <Run Text="{Binding Hex}"/>
                    </TextBlock>
                    <Rectangle Height="10" Fill="{Binding Color}"/>
                </StackPanel>
                <WindowsFormsHost x:Name="WindowsFormsHost1" Height="200" >
                    <winf:PropertyGrid x:Name="PropertyGrid2">
                    </winf:PropertyGrid>
                </WindowsFormsHost>
                <Button Content="读取CFG测试"  Click="Button3_Click"/>
                <Button Content="保存CFG测试"  Click="Button4_Click"/>
                <ScrollViewer  Height="200" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                    <ListView  x:Name="ListView1"  ScrollViewer.HorizontalScrollBarVisibility="Disabled"  ScrollViewer.VerticalScrollBarVisibility="Auto" ManipulationBoundaryFeedback="SCManipulationBoundaryFeedback" >
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="{Binding ElementName=ListView1,Path=ActualWidth}">
                                    <GridViewColumn.CellTemplate  >
                                        <DataTemplate >
                                            <Border x:Name="border1"  Height="20" Margin="0,2,0,2" BorderThickness="0" Width="{Binding ElementName=ListView1,Path=ActualWidth}"   >
                                                <Grid Margin="0,2,30,2" >
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="30"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel Grid.Column="1" Margin="2" Orientation="Horizontal">
                                                        <CheckBox IsChecked="True" Click="CheckBox_Click" Tag="{Binding .}"/>
                                                        <TextBlock Text="{Binding Path = CenterX }" />
                                                        <TextBlock Text="{Binding Path = CenterY }" />
                                                    </StackPanel>
                                                </Grid>

                                            </Border>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </ScrollViewer>
                <WpfPlot Height="155"/>
            </StackPanel>
            <Grid Grid.Column="1" Background="#c3c3c3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <ToolBar Grid.Row="0">
                    <Button  Height="25" Width="25" Click="Button_Click_1">
                        <Image Stretch="Uniform">
                            <Image.Source>
                                <DrawingImage >
                                    <DrawingImage.Drawing>
                                        <DrawingGroup ClipGeometry="M0,0 V1024 H1024 V0 H0 Z">
                                            <GeometryDrawing Brush="#FF000000" Geometry="F1 M1024,1024z M0,0z M316,672L376,672C380.4,672,384,668.4,384,664L384,360C384,355.6,380.4,352,376,352L316,352C311.6,352,308,355.6,308,360L308,664C308,668.4,311.6,672,316,672z M512,622C534.1,622 552,604.1 552,583 552,559.9 534.1,542 512,542 489.9,542 472,559.9 472,583 472,604.1 489.9,622 512,622z M512,482C534.1,482 552,464.1 552,443 552,419.9 534.1,402 512,402 489.9,402 472,419.9 472,443 472,464.1 489.9,482 512,482z" />
                                            <GeometryDrawing Brush="#FF000000" Geometry="F1 M1024,1024z M0,0z M880,112L144,112C126.3,112,112,126.3,112,144L112,880C112,897.7,126.3,912,144,912L880,912C897.7,912,912,897.7,912,880L912,144C912,126.3,897.7,112,880,112z M840,840L184,840 184,184 840,184 840,840z" />
