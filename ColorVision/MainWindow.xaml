                                        </DrawingGroup>
                                    </DrawingImage.Drawing>
                                </DrawingImage>
                            </Image.Source>
                        </Image>
                    </Button>
                    <Button Height="25" Width="25" Click="Button_Click_4">
                        <Button.Content>
                            <Image >
                                <Image.Source>
                                    <DrawingImage>
                                        <DrawingImage.Drawing>
                                            <DrawingGroup ClipGeometry="M0,0 V1024 H1024 V0 H0 Z">
                                                <GeometryDrawing Brush="#FF000000" Geometry="F1 M1024,1024z M0,0z M342,88L120,88C102.3,88,88,102.3,88,120L88,344C88,352.8,95.2,360,104,360L152,360C160.8,360,168,352.8,168,344L168,168 342,168C350.8,168,358,160.8,358,152L358,104C358,95.2,350.8,88,342,88z M920,664L872,664C863.2,664,856,671.2,856,680L856,856 682,856C673.2,856,666,863.2,666,872L666,920C666,928.8,673.2,936,682,936L904,936C921.7,936,936,921.7,936,904L936,680C936,671.2,928.8,664,920,664z M342,856L168,856 168,680C168,671.2,160.8,664,152,664L104,664C95.2,664,88,671.2,88,680L88,904C88,921.7,102.3,936,120,936L342,936C350.8,936,358,928.8,358,920L358,872C358,863.2,350.8,856,342,856z M904,88L682,88C673.2,88,666,95.2,666,104L666,152C666,160.8,673.2,168,682,168L856,168 856,344C856,352.8,863.2,360,872,360L920,360C928.8,360,936,352.8,936,344L936,120C936,102.3,921.7,88,904,88z" />
                                            </DrawingGroup>
                                        </DrawingImage.Drawing>
                                    </DrawingImage>
                                </Image.Source>
                            </Image>
                        </Button.Content>
                    </Button>

                    <TextBox x:Name="TextBlockZoom" Width="50" />
                    <ToggleButton Content="网格" IsChecked="True" Click="Button5_Click"/>
                    <ToggleButton Content="标尺" IsChecked="True"  Click="Button6_Click"/>
                    <ToggleButton Content="删除图形"  Click="Button7_Click"/>
                </ToolBar>
                <Grid Grid.Row="1">
                    <effects:Zoombox x:Name="Zoombox1"   Grid.Row="0">
                        <local:DrawCanvas x:Name="ImageShow" MouseLeave="ImageShow_MouseLeave"  MouseEnter="ImageShow_MouseEnter"  MouseDown="ImageShow_MouseDown"  MouseWheel="ImageShow_MouseWheel" RenderOptions.BitmapScalingMode="NearestNeighbor" RenderOptions.ClearTypeHint="Enabled" MouseMove="ImageShow_MouseMove"/>
                    </effects:Zoombox>
                </Grid>


                <local:InkVisual  Grid.Row="1"  Visibility="Hidden" x:Name="InkVisual"/>
            </Grid>


        </Grid>
        <Grid Grid.Row="2">
            <StatusBar x:Name="StatusBar1" DataContext="{Binding Path=performanceSetting}" >
                <StatusBarItem >
                    <TextBlock>
                        <Run Text="{Binding Path=MemorytThis}"/>
                    </TextBlock>
                </StatusBarItem>
                <StatusBarItem HorizontalAlignment="Right" Content="{Binding Path=Time}">
                </StatusBarItem>
            </StatusBar>
        </Grid>
    </Grid>
</Window>
