<Window x:Class="ColorVision.MQTT.MQTTLog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorVision.MQTT"
        mc:Ignorable="d"
        xmlns:properties ="clr-namespace:ColorVision.Properties"
        d:DataContext="{d:DesignInstance local:MQTTSetting}"
        Title="{x:Static properties:Resource.MQTTLog}" Height="550" Width="800" Background="{StaticResource GlobalBackground}" >
    <Window.Resources>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="{DynamicResource GlobalTextBrush}"/>
        </Style>
    </Window.Resources>
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel  Grid.Row="0">
            <Grid  DockPanel.Dock="Right" Height="300" Width="400   ">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="订阅列表" TextWrapping="WrapWithOverflow"  Width="15"/>
                <ListView Grid.Column="1"  x:Name="TopicListView" Margin="0" BorderThickness="0"  SelectionChanged="TopicListView_SelectionChanged">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
            <Grid >
                <StackPanel>
                    <GroupBox Header="{x:Static properties:Resource.Settings}" Margin="5">
                        <StackPanel Margin="5">
                            <DockPanel >
                                <ToggleButton HorizontalAlignment="Left" Height="16" Margin="2" Style="{StaticResource ToggleButtonSwitch}"  IsChecked="{Binding IsShieldHeartbeat}"/>
                                <TextBlock  HorizontalAlignment="Left" Text="屏蔽心跳信号"/>
                            </DockPanel>
                            <DockPanel >
                                <ToggleButton HorizontalAlignment="Left" Height="16" Margin="2" Style="{StaticResource ToggleButtonSwitch}"  IsChecked="{Binding ShowSelect}"/>
                                <TextBlock  HorizontalAlignment="Left" Text="只显示选中的服务日志"/>
                            </DockPanel>
                        </StackPanel>
                    </GroupBox>
                    <Border  Grid.Row="0"  BorderThickness="1" Margin="0" CornerRadius="5">
                        <StackPanel Margin="5">
                            <DockPanel Margin="2">
                                <TextBlock Text="{x:Static properties:Resource.Topic}" VerticalAlignment="Center" Width="50"/>
                                <TextBox x:Name="TextBoxSubscribe"  ToolTip="{x:Static properties:Resource.SubscribedTopic}"  VerticalAlignment="Center" TextWrapping="Wrap" Text="topic1"  />
                            </DockPanel>
                            <UniformGrid Columns="3">
                                <Grid/>
                                <Button  Content="{x:Static properties:Resource.Subscribe}" Click="Subscribe_Click" Width="80" Margin="2"/>
                                <Button  Content="{x:Static properties:Resource.Unsubscribe}" Click="UnSubscribe_Click" Width="80" Margin="2"/>
                            </UniformGrid>
                        </StackPanel>
                    </Border>
                    <Border  Grid.Row="1" BorderThickness="1" CornerRadius="5">
                        <StackPanel Orientation="Vertical" Margin="5">
                            <DockPanel Margin="5,2">
                                <TextBlock Text="{x:Static properties:Resource.Topic}" VerticalAlignment="Center" Width="50"/>
                                <TextBox x:Name="TextBoxSubscribe1" ToolTip="发送的主题" TextWrapping="NoWrap" AcceptsReturn="True" Text="topic1"  />
                            </DockPanel>
                            <DockPanel Margin="5,2">
                                <TextBlock Text="{x:Static properties:Resource.Send}" VerticalAlignment="Center" Width="50"/>
                                <TextBox x:Name="TextBoxSend"  TextWrapping="NoWrap" AcceptsReturn="True" Text="topic1"  />
                            </DockPanel>
                            <CheckBox x:Name="CheckBoxRetained" IsEnabled="False"  HorizontalAlignment="Right" Margin="5,2" Content="{x:Static properties:Resource.MessageRetention}" VerticalAlignment="Center" />
                            <Button  Content="{x:Static properties:Resource.Send}" Click="Send_Click" HorizontalAlignment="Right"  Margin="2"  Width="80"/>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </Grid>

        </DockPanel>
        <Border  Grid.Row="1" CornerRadius="5" >
            <ScrollViewer>
                <StackPanel x:Name="StackPanelText">
                </StackPanel>
            </ScrollViewer>

        </Border>
            


    </Grid>
</Window>
