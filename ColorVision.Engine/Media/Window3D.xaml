<Window x:Class="ColorVision.Engine.Media.Window3D"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorVision.Engine.Media"
        mc:Ignorable="d"
        Title="Window3D" Height="450" Width="800" Initialized="Window_Initialized">
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="143*"/>
        </Grid.RowDefinitions>
        <Button Content="+"  Click="Button_Click"  VerticalAlignment="Top" HorizontalAlignment="Left" Panel.ZIndex="99" Grid.RowSpan="2"/>
        <Button Content="-"  Click="Button_Click_1"  VerticalAlignment="Top" HorizontalAlignment="Left" Panel.ZIndex="99" Grid.RowSpan="2"/>

        <Grid x:Name="ContentGrid" Grid.RowSpan="2" >


        </Grid>
    </Grid>

</Window>
