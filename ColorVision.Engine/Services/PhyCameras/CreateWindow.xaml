<Window x:Class="ColorVision.Engine.Services.PhyCameras.CreateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorVision.Engine.Services.PhyCameras"
        xmlns:resx="clr-namespace:ColorVision.Engine.Properties"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance local:CreateWindow}"
        Title="创建设备" Height="400" Width="400" Background="{DynamicResource GlobalBackground}" Initialized="Window_Initialized">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" CornerRadius="0,0,0,0">
            <StackPanel >
                <hc:ComboBox  x:Name="CameraCode" IsEditable="True" SelectedIndex="0" SelectedValue="{Binding CreateConfig.CameraID}" Text="{Binding CreateConfig.Code}" />
                <DockPanel Margin="5,5,0,0" >
                    <TextBlock Text="设备名称" Width="120" />
                    <TextBlock x:Name="DeviceName" Text="" />
                </DockPanel>
                <DockPanel Margin="5,5" >
                    <TextBlock Text="相机ID" Width="120" />
                    <TextBlock Text="{Binding CreateConfig.CameraID}" />
                </DockPanel>
            </StackPanel>
        </Border>
        <ScrollViewer Grid.Row="1" Margin="0,5,0,5">
            <StackPanel  Margin="0,5" >
                <GroupBox Header="配置信息" Margin="0,5">
                    <StackPanel Margin="5">
                        <DockPanel Margin="0,2">
                            <TextBlock Text="相机类型" Width="120"/>
                            <hc:ComboBox x:Name="ComboxCameraType"  SelectedValue="{Binding CreateConfig.CameraType}" SelectedValuePath="Key"  DisplayMemberPath="Value" />
                        </DockPanel>
                        <DockPanel Margin="0,2">
                            <TextBlock Text="相机型号" Width="120"/>
                            <hc:ComboBox x:Name="ComboxCameraModel"  SelectedValue="{Binding CreateConfig.CameraModel}" SelectedValuePath="Key"  DisplayMemberPath="Value" />
                        </DockPanel>
                        <DockPanel Margin="0,2">
                            <TextBlock Text="相机模式" Width="120"/>
                            <hc:ComboBox x:Name="ComboxCameraMode"  SelectedValue="{Binding CreateConfig.CameraMode}" SelectedValuePath="Key"  DisplayMemberPath="Value" />
                        </DockPanel>
                        <DockPanel Margin="0,2">
                            <TextBlock Text="默认取图模式" Width="120"/>
                            <ComboBox  x:Name="ComboxCameraTakeImageMode"  SelectedValue="{Binding CreateConfig.TakeImageMode}"  SelectedValuePath="Key"  DisplayMemberPath="Value" />
                        </DockPanel>
                        <DockPanel Margin="0,2">
                            <TextBlock Text="默认通道数" Width="120"/>
                            <hc:ComboBox  x:Name="ComboxCameraChannel"   SelectedValue="{Binding CreateConfig.Channel}"   SelectedValuePath="Key"  DisplayMemberPath="Value" />
                        </DockPanel>
                        <DockPanel Margin="0,2">
                            <TextBlock Text="默认图像位数" Width="120"/>
                            <ComboBox  x:Name="ComboxCameraImageBpp"    SelectedValue="{Binding CreateConfig.ImageBpp}"  SelectedValuePath="Key"  DisplayMemberPath="Value"/>
                        </DockPanel>
                    </StackPanel>
                </GroupBox>


                <GroupBox Header="相机配置" Margin="0,5">
                    <StackPanel Margin="5">
                        <GroupBox Header="OB区域" Margin="0,2">
                            <UniformGrid Rows="2" Columns="2" Margin="5">
                                <DockPanel Margin="5,2,10,2" >
                                    <TextBlock Text="左:" Width="60"/>
                                    <TextBox Style="{StaticResource TextBox.Small}" Text="{Binding CreateConfig.CameraCfg.Ob}"/>
                                </DockPanel>
                                <DockPanel Margin="10,2,5,2" >
                                    <TextBlock Text="上:" Width="60"/>
                                    <TextBox Style="{StaticResource TextBox.Small}" Text="{Binding CreateConfig.CameraCfg.ObT}"/>
                                </DockPanel>
                                <DockPanel Margin="5,2,10,2" >
                                    <TextBlock Text="右:" Width="60"/>
                                    <TextBox Style="{StaticResource TextBox.Small}" Text="{Binding CreateConfig.CameraCfg.ObR}"/>
                                </DockPanel>
                                <DockPanel Margin="10,2,5,2" >
                                    <TextBlock Text="下:" Width="60"/>
                                    <TextBox Style="{StaticResource TextBox.Small}" Text="{Binding CreateConfig.CameraCfg.ObB}"/>
                                </DockPanel>
                            </UniformGrid>
                        </GroupBox>

                        <GroupBox Header="ROI区域" Margin="0,2">
                            <UniformGrid Rows="2" Columns="2" Margin="5">
                                <DockPanel Margin="5,2,10,2" >
                                    <TextBlock Text="PointX:" Width="60"/>
                                    <TextBox Style="{StaticResource TextBox.Small}" Text="{Binding CreateConfig.CameraCfg.PointX}"/>
                                </DockPanel>
                                <DockPanel Margin="10,2,5,2" >
                                    <TextBlock Text="PointY:" Width="60"/>
                                    <TextBox Style="{StaticResource TextBox.Small}" Text="{Binding CreateConfig.CameraCfg.PointY}"/>
                                </DockPanel>
                                <DockPanel Margin="5,2,10,2" >
                                    <TextBlock Text="Width:" Width="60"/>
                                    <TextBox Style="{StaticResource TextBox.Small}" Text="{Binding CreateConfig.CameraCfg.Width}"/>
                                </DockPanel>
                                <DockPanel Margin="10,2,5,2" >
                                    <TextBlock Text="Height:" Width="60"/>
                                    <TextBox Style="{StaticResource TextBox.Small}" Text="{Binding CreateConfig.CameraCfg.Height}"/>
                                </DockPanel>
                            </UniformGrid>
                        </GroupBox>

                        <DockPanel Margin="0,2">
                            <TextBlock Text="温控:" Width="120"/>
                            <TextBox Style="{StaticResource TextBox.Small}" Text="{Binding CreateConfig.CameraCfg.TempCtlChecked}"/>
                        </DockPanel>
                        <DockPanel Visibility="{Binding CreateConfig.CameraCfg.TempCtlChecked,Converter={StaticResource bool2VisibilityConverter}}">
                            <TextBlock Text="目标温度:" Width="120"/>
                            <TextBox Style="{StaticResource TextBox.Small}" Text="{Binding CreateConfig.CameraCfg.TargetTemp}"/>
                        </DockPanel>
                        <DockPanel Margin="0,2">
                            <TextBlock Text="传输速率:" Width="120"/>
                            <TextBox Style="{StaticResource TextBox.Small}" Text="{Binding CreateConfig.CameraCfg.UsbTraffic}"/>
                        </DockPanel>
                        <DockPanel Margin="0,2">
                            <TextBlock Text="偏移:" Width="120"/>
                            <TextBox Style="{StaticResource TextBox.Small}" Text="{Binding CreateConfig.CameraCfg.Offset}"/>
                        </DockPanel>
                        <DockPanel Margin="0,2">
                            <TextBlock Text="增益:" Width="120"/>
                            <TextBox Style="{StaticResource TextBox.Small}" Text="{Binding CreateConfig.CameraCfg.Gain}"/>
                        </DockPanel>
                        <DockPanel Margin="0,2">
                            <TextBlock Text="定时查询:" Width="120"/>
                            <TextBox Style="{StaticResource TextBox.Small}" Text="{Binding CreateConfig.CameraCfg.TempSpanTime}"/>
                        </DockPanel>
                    </StackPanel>
                </GroupBox>


                <GroupBox Header="滤色轮配置" Margin="0,5" Visibility="{Binding IsChannelThree,Converter={StaticResource bool2VisibilityConverter}}">
                    <StackPanel Margin="5">
                        <DockPanel Margin="0,2">
                            <TextBlock Text="启用串口发送:" Width="120"/>
                            <ui:ToggleSwitch IsChecked="{Binding CreateConfig.CFW.IsCOM}"/>
                        </DockPanel>
                        <StackPanel  Visibility="{Binding CreateConfig.CFW.IsCOM,Converter={StaticResource bool2VisibilityConverter}}" >
                            <DockPanel Margin="0,2">
                                <TextBlock Text="串口:" Width="120"/>
                                <hc:ComboBox  x:Name="TextSerial1" IsEditable="True" Text="{Binding CreateConfig.CFW.SzComName}"  hc:InfoElement.ShowClearButton="True" Margin="0,0,10,0"  />
                            </DockPanel>
                            <DockPanel Margin="0,2">
                                <TextBlock Text="波特率:" Width="120"/>
                                <hc:ComboBox  x:Name="TextBaudRate1" IsEditable="True" Text="{Binding CreateConfig.CFW.BaudRate}"  hc:InfoElement.ShowClearButton="True" Margin="0,0,10,0"  />
                            </DockPanel>
                        </StackPanel>
                        <DockPanel Margin="0,2">
                            <TextBlock Text="滤色轮数量:" Width="120"/>
                            <hc:NumericUpDown Value="{Binding CFW.CFWNum}" Minimum="0"/>
                        </DockPanel>
                        <UniformGrid Columns="3" Rows="1">
                            <StackPanel Margin="0,0,5,0">
                                <DockPanel Margin="0,2">
                                    <ComboBox x:Name="chType1" DockPanel.Dock="Right" Width="105"  SelectedValue="{Binding CreateConfig.CFW.ChannelCfgs[0].Chtype}"   SelectedValuePath="Key"  DisplayMemberPath="Value" Text=""/>
                                    <TextBlock Text="chType"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <hc:NumericUpDown DockPanel.Dock="Right" Width="105" Value="{Binding CreateConfig.CFW.ChannelCfgs[0].Cfwport}" Minimum="0"/>
                                    <TextBlock Text="cfwport0"/>
                                </DockPanel>
                                <DockPanel Margin="0,2" Visibility="{Binding CFW.IsCFWNum2,Converter={StaticResource bool2VisibilityConverter}}">
                                    <hc:NumericUpDown DockPanel.Dock="Right" Width="105" Value="{Binding CreateConfig.CFW.ChannelCfgs[3].Cfwport}" Minimum="0"/>
                                    <TextBlock Text="cfwport3"/>
                                </DockPanel>
                                <DockPanel Margin="0,2" Visibility="{Binding CFW.IsCFWNum3,Converter={StaticResource bool2VisibilityConverter}}">
                                    <hc:NumericUpDown DockPanel.Dock="Right" Width="105" Value="{Binding CreateConfig.CFW.ChannelCfgs[6].Cfwport}" Minimum="0"/>
                                    <TextBlock Text="cfwport6"/>
                                </DockPanel>
                            </StackPanel>
                            <StackPanel  Margin="5,0,5,0">
                                <DockPanel Margin="0,2">
                                    <ComboBox x:Name="chType2" DockPanel.Dock="Right" Width="105" SelectedValue="{Binding CreateConfig.CFW.ChannelCfgs[1].Chtype}"  SelectedValuePath="Key"  DisplayMemberPath="Value"/>
                                    <TextBlock Text="chType"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <hc:NumericUpDown DockPanel.Dock="Right" Width="105" Value="{Binding CreateConfig.CFW.ChannelCfgs[1].Cfwport}" Minimum="0"/>
                                    <TextBlock Text="cfwport1"/>
                                </DockPanel>
                                <DockPanel Margin="0,2" Visibility="{Binding CFW.IsCFWNum2,Converter={StaticResource bool2VisibilityConverter}}">
                                    <hc:NumericUpDown DockPanel.Dock="Right" Width="105" Value="{Binding CreateConfig.CFW.ChannelCfgs[4].Cfwport}" Minimum="0"/>
                                    <TextBlock Text="cfwport4"/>
                                </DockPanel>
                                <DockPanel Margin="0,2" Visibility="{Binding CFW.IsCFWNum3,Converter={StaticResource bool2VisibilityConverter}}">
                                    <hc:NumericUpDown DockPanel.Dock="Right" Width="105" Value="{Binding CreateConfig.CFW.ChannelCfgs[7].Cfwport}" Minimum="0"/>
                                    <TextBlock Text="cfwport7"/>
                                </DockPanel>
                            </StackPanel>
                            <StackPanel  Margin="5,0,0,0">
                                <DockPanel Margin="0,2">
                                    <ComboBox x:Name="chType3" DockPanel.Dock="Right" Width="105"     SelectedValue="{Binding CreateConfig.CFW.ChannelCfgs[2].Chtype}"   SelectedValuePath="Key"  DisplayMemberPath="Value" Text=""/>
                                    <TextBlock Text="chType"/>
                                </DockPanel>
                                <DockPanel Margin="0,2">
                                    <hc:NumericUpDown DockPanel.Dock="Right" Width="105" Value="{Binding CreateConfig.CFW.ChannelCfgs[2].Cfwport}" Minimum="0"/>
                                    <TextBlock Text="cfwport2"/>
                                </DockPanel>
                                <DockPanel Margin="0,2" Visibility="{Binding CFW.IsCFWNum2,Converter={StaticResource bool2VisibilityConverter}}">
                                    <hc:NumericUpDown DockPanel.Dock="Right" Width="105" Value="{Binding CreateConfig.CFW.ChannelCfgs[5].Cfwport}" Minimum="0"/>
                                    <TextBlock Text="cfwport5"/>
                                </DockPanel>
                                <DockPanel Margin="0,2" Visibility="{Binding CFW.IsCFWNum3,Converter={StaticResource bool2VisibilityConverter}}">
                                    <hc:NumericUpDown DockPanel.Dock="Right" Width="105" Value="{Binding CreateConfig.CFW.ChannelCfgs[8].Cfwport}" Minimum="0"/>
                                    <TextBlock Text="cfwport8"/>
                                </DockPanel>
                            </StackPanel>
                        </UniformGrid>
                    </StackPanel>
                </GroupBox>


                <GroupBox Header="数据文件服务配置" Margin="0,5">
                    <StackPanel Margin="5">
                        <DockPanel Margin="0,2">
                            <Button Content=".." DockPanel.Dock="Right" VerticalAlignment="Bottom" Height="30" Width="30" Click="FileBasePath_Click"/>
                            <TextBlock Text="数据目录:" Width="120"/>
                            <TextBox Text="{Binding  CreateConfig.FileServerCfg.FileBasePath}"/>
                        </DockPanel>
                        <DockPanel Margin="0,2">
                            <TextBlock Text="端口地址:" Width="120"/>
                            <TextBox Text="{Binding CreateConfig.FileServerCfg.Endpoint}"/>
                        </DockPanel>
                        <DockPanel Margin="0,2">
                            <TextBlock Text="端口范围:" Width="120"/>
                            <TextBox Text="{Binding CreateConfig.FileServerCfg.PortRange}" />
                        </DockPanel>
                    </StackPanel>
                </GroupBox>
            </StackPanel>

        </ScrollViewer>
        <Grid Grid.Row="2">
            <Button  Content="{x:Static resx:Resources.Submit}" Height="30" Foreground="White" Background="{StaticResource PrimaryBrush}" Click="Button_Click"  />
        </Grid>

    </Grid>
</Window>
