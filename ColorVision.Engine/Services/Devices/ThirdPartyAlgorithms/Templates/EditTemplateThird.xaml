<UserControl x:Class="ColorVision.Engine.Services.Devices.ThirdPartyAlgorithms.Templates.EditTemplateThird"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ColorVision.Engine.Services.Devices.ThirdPartyAlgorithms.Templates"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance local:FindDotsArrayParam}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox Text="{Binding JsonValue}" TextWrapping="Wrap" Grid.Row="1" AcceptsReturn="True" ScrollViewer.VerticalScrollBarVisibility="Auto" BorderThickness="0"  VerticalAlignment="Stretch" VerticalContentAlignment="Top"/>
    </Grid>
</UserControl>
