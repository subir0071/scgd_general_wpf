<UserControl x:Class="ColorVision.Engine.Services.Devices.Algorithm.Templates.POIGenCali.EditPoiGenCali"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ColorVision.Engine.Services.Devices.Algorithm.Templates.POIGenCali"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance local:PoiGenCaliParam}"
             d:DesignHeight="450" d:DesignWidth="300" Width="300" Initialized="UserControl_Initialized">
    <UserControl.Resources>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="{DynamicResource GlobalTextBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            <Setter Property="ToolTip" Value="{ Binding Text,RelativeSource={RelativeSource Self}}"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Border Background="{DynamicResource  SecondaryRegionBrush}" BorderBrush="{DynamicResource BorderBrush}"  BorderThickness="1" CornerRadius="5"/>
        <ScrollViewer>
            <StackPanel Margin="5">
                <DockPanel  Margin="0,0,0,5" Visibility="{Binding XYZEnable,Converter={StaticResource bool2VisibilityConverter}}">
                    <TextBlock HorizontalAlignment="Left" Text="修正方式"  MinWidth="100"/>
                    <ComboBox Name="CobGenCalibrationType"  SelectedValue="{Binding GenCalibrationType}"  Style="{StaticResource ComboBox.Small}" SelectedValuePath="Key"  DisplayMemberPath="Value" />
                </DockPanel>
                <DockPanel  Margin="0,0,0,5" Visibility="{Binding XYZEnable,Converter={StaticResource bool2VisibilityConverter}}">
                    <TextBlock HorizontalAlignment="Left" Text="对标参数"  MinWidth="100"/>
                </DockPanel>
                <Border Grid.Row="1"  Style="{StaticResource BorderModuleArea}" CornerRadius="5" Margin="0,0,0,5" >
                    <StackPanel Margin="5">
                        <DockPanel  Margin="0,0,0,5">
                            <TextBlock Text="使用XYZ" MinWidth="100"/>
                            <ToggleButton  Style="{StaticResource ToggleButtonSwitch.Small}" IsChecked="{Binding XYZIsEnable}"/>
                        </DockPanel>
                        <DockPanel  Margin="0,0,0,5" Visibility="{Binding XYZIsEnable,Converter={StaticResource bool2VisibilityConverter}}">
                            <TextBlock HorizontalAlignment="Left" Text="计算方式"  MinWidth="100"/>
                            <ComboBox Name="CobXYZGenType"  SelectedValue="{Binding XGenType}"  Style="{StaticResource ComboBox.Small}" SelectedValuePath="Key"  DisplayMemberPath="Value" />
                        </DockPanel>
                        <DockPanel Visibility="{Binding XYZIsEnable,Converter={StaticResource bool2VisibilityConverter}}" >
                            <TextBlock Text="Threshold"  MinWidth="100"/>
                            <TextBox Text="{Binding XYZIsEnable}" Style="{StaticResource TextBox.Small}"  PreviewKeyDown="TextBox_PreviewKeyDown"/>
                        </DockPanel>



                    </StackPanel>
                </Border>

                <Border Grid.Row="1"  Style="{StaticResource BorderModuleArea}"  CornerRadius="5" Margin="0,0,0,5">
                    <StackPanel Margin="5">
                        <DockPanel  Margin="0,0,0,5">
                            <TextBlock Text="使用xy" MinWidth="100"/>
                            <ToggleButton  Style="{StaticResource ToggleButtonSwitch.Small}" IsChecked="{Binding xyIsEnable}"/>
                        </DockPanel>
                        <DockPanel  Margin="0,0,0,5" Visibility="{Binding xyIsEnable,Converter={StaticResource bool2VisibilityConverter}}">
                            <TextBlock HorizontalAlignment="Left" Text="计算方式"  MinWidth="100"/>
                            <ComboBox Name="CobxyGenType"  SelectedValue="{Binding xyGenType}"  Style="{StaticResource ComboBox.Small}" SelectedValuePath="Key"  DisplayMemberPath="Value" />
                        </DockPanel>
                        <DockPanel Visibility="{Binding xyIsEnable,Converter={StaticResource bool2VisibilityConverter}}"  >
                            <TextBlock Text="Threshold"  MinWidth="100"/>
                            <TextBox Text="{Binding xyThreshold}" Style="{StaticResource TextBox.Small}"  PreviewKeyDown="TextBox_PreviewKeyDown"/>
                        </DockPanel>
                    </StackPanel>
                </Border>

                <Border Grid.Row="1"  Style="{StaticResource BorderModuleArea}"  CornerRadius="5" Margin="0,0,0,5">
                    <StackPanel Margin="5">
                        <DockPanel  Margin="0,0,0,5">
                            <TextBlock Text="使用uv" MinWidth="100"/>
                            <ToggleButton  Style="{StaticResource ToggleButtonSwitch.Small}" IsChecked="{Binding uvIsEnable}"/>
                        </DockPanel>
                        <DockPanel  Margin="0,0,0,5" Visibility="{Binding uvIsEnable,Converter={StaticResource bool2VisibilityConverter}}">
                            <TextBlock HorizontalAlignment="Left" Text="计算方式"  MinWidth="100"/>
                            <ComboBox Name="CobuvGenType"  SelectedValue="{Binding uvGenType}"  Style="{StaticResource ComboBox.Small}" SelectedValuePath="Key"  DisplayMemberPath="Value" />
                        </DockPanel>
                        <DockPanel Visibility="{Binding uvIsEnable,Converter={StaticResource bool2VisibilityConverter}}"  >
                            <TextBlock Text="Threshold"  MinWidth="100"/>
                            <TextBox Text="{Binding uvThreshold}" Style="{StaticResource TextBox.Small}"  PreviewKeyDown="TextBox_PreviewKeyDown"/>
                        </DockPanel>
                    </StackPanel>
                </Border>

                <Border Grid.Row="1"  Style="{StaticResource BorderModuleArea}"  CornerRadius="5" Margin="0,0,0,5">
                    <StackPanel Margin="5">
                        <DockPanel  Margin="0,0,0,5">
                            <TextBlock Text="使用Lab" MinWidth="100"/>
                            <ToggleButton  Style="{StaticResource ToggleButtonSwitch.Small}" IsChecked="{Binding LabIsEnable}"/>
                        </DockPanel>
                        <DockPanel  Margin="0,0,0,5" Visibility="{Binding LabIsEnable,Converter={StaticResource bool2VisibilityConverter}}">
                            <TextBlock HorizontalAlignment="Left" Text="计算方式"  MinWidth="100"/>
                            <ComboBox Name="CobLabGenType"  SelectedValue="{Binding LabGenType}"  Style="{StaticResource ComboBox.Small}" SelectedValuePath="Key"  DisplayMemberPath="Value" />
                        </DockPanel>
                        <DockPanel Visibility="{Binding LabIsEnable,Converter={StaticResource bool2VisibilityConverter}}"  >
                            <TextBlock Text="Threshold"  MinWidth="100"/>
                            <TextBox Text="{Binding LabThreshold}" Style="{StaticResource TextBox.Small}"  PreviewKeyDown="TextBox_PreviewKeyDown"/>
                        </DockPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
