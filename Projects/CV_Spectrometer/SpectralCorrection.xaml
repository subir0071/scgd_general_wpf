<Window x:Class="CV_Spectrometer.SpectralCorrection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CV_Spectrometer"
        xmlns:properties="clr-namespace:CV_Spectrometer.Properties"
        mc:Ignorable="d"
         Title="{x:Static properties:Resources.绝对光谱校正}" Height="150" Width="440" MaxHeight="150" MinHeight="150" MaxWidth="440" MinWidth="440" ResizeMode="NoResize">
    <Grid>
        <Label x:Name="label" Content="{x:Static properties:Resources.校正文件}" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="{x:Static properties:Resources.注选择正确的校正文件后对准校正光源点击开始校正按钮}" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" Width="346"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="25" Margin="73,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="342"/>
        <Button x:Name="button" Content="{x:Static properties:Resources.选择文件}" HorizontalAlignment="Left" Margin="361,40,0,0" VerticalAlignment="Top" Width="54" Height="25" RenderTransformOrigin="1.636,0.56" Click="Button_Click"/>
        <Button x:Name="button1" Content="{x:Static properties:Resources.Exit}" HorizontalAlignment="Left" Margin="340,78,0,0" VerticalAlignment="Top" Width="75" Height="25" Click="Button1_Click"/>
        <Button x:Name="button2" Content="{x:Static properties:Resources.开始校正}" HorizontalAlignment="Left" Margin="260,78,0,0" VerticalAlignment="Top" Width="75" Height="25" Click="Button2_Click"/>
        <Label x:Name="label2" Content="{x:Static properties:Resources.使用前请确保校零准确推荐使用自动积分}" HorizontalAlignment="Left" Margin="10,78,0,0" VerticalAlignment="Top" Width="245"/>

    </Grid>
</Window>
